<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    app:cardCornerRadius="@dimen/_15sdp"
    android:layout_margin="@dimen/_4sdp"
    app:cardBackgroundColor="#F6D1DE">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/_10sdp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/user_image"
            android:layout_width="75dp"
            android:layout_height="75dp"
            tools:src="@color/black"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="@dimen/_10sdp"
            tools:ignore="MissingConstraints" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/profile_Name"
            android:layout_width="@dimen/_215sdp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@id/user_image"
            app:layout_constraintTop_toTopOf="@id/user_image"
            android:layout_marginTop="@dimen/_15sdp"
            android:layout_marginStart="@dimen/_5sdp"
            android:drawableEnd="@drawable/close_icon"
            android:textSize="17dp"
            android:textColor="@color/black"
            android:textStyle="bold"
            tools:text="Dina Abdel Salam"/>

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/post_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="10mhjhjnb "
            app:layout_constraintTop_toBottomOf="@id/profile_Name"
            app:layout_constraintStart_toEndOf="@id/user_image"
            android:layout_marginStart="@dimen/_5sdp"
            android:textColor="#0585EC" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/post_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/user_image"
            tools:text="nbnjhb nbhnm hjbn jmn"
            android:layout_marginTop="@dimen/_7sdp"
            android:textStyle="italic" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guid_line"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.7"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/share_btn"
            android:layout_width="@dimen/_90sdp"
            android:layout_height="@dimen/_40sdp"
            android:backgroundTint="#F6D1DE"
            android:text="@string/share"
            android:textColor="@color/black"
            android:textSize="@dimen/_10ssp"
            app:icon="@drawable/share_icon"
            app:iconTint="@color/black"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/guid_line" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/comment_btn"
            android:layout_width="0dp"
            android:layout_height="@dimen/_40sdp"
            android:layout_marginEnd="15dp"
            android:backgroundTint="#F6D1DE"
            android:text="@string/comment"
            android:textColor="@color/black"
            app:icon="@drawable/commint_icon"
            app:iconTint="@color/black"
            android:textSize="@dimen/_9ssp"
            app:layout_constraintEnd_toStartOf="@+id/share_btn"
            app:layout_constraintTop_toBottomOf="@id/guid_line" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/like_btn"
            android:layout_width="0dp"
            android:layout_height="@dimen/_40sdp"
            android:layout_marginEnd="8dp"
            android:backgroundTint="#F6D1DE"
            android:text="@string/like"
            android:textColor="@color/black"
            app:icon="@drawable/like_icon"
            app:iconTint="@color/black"
            android:textSize="@dimen/_9ssp"
            app:layout_constraintTop_toBottomOf="@id/guid_line"
            app:layout_constraintStart_toStartOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>



</androidx.cardview.widget.CardView>